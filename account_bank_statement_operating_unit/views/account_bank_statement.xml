<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
    <!-- Bank Statement -->
    <record id="view_bank_statement_form" model="ir.ui.view">
      <field name="name">account.bank.statement.form.ou</field>
      <field name="model">account.bank.statement</field>
      <field name="inherit_id" ref="account.view_bank_statement_form"/>
      <field name="arch" type="xml">
        <field name="company_id" position="after">
          <field name="operating_unit_id"  groups="operating_unit.group_multi_operating_unit"/>
        </field>
        <xpath expr="//notebook/page[@name='statement_line_ids']//field[@name='bank_account_id']" position="after">
          <field name="operating_unit_id"
                 groups="operating_unit.group_multi_operating_unit"/>
        </xpath>
      </field>
    </record>

    <record id="account_bank_statement_view_tree" model="ir.ui.view">
      <field name="name">account.bank.statement.tree.ou</field>
      <field name="model">account.bank.statement</field>
      <field name="inherit_id" ref="account.view_bank_statement_tree"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='journal_id']" position="after">
            <field name="operating_unit_id"  groups="operating_unit.group_multi_operating_unit"/>
        </xpath>
      </field>
    </record>

    <!-- Cash Register -->
    <record id="account_cash_statement_view_tree" model="ir.ui.view">
      <field name="name">account.cash.statement.tree.ou</field>
      <field name="model">account.bank.statement</field>
      <field name="inherit_id" ref="account.view_cash_statement_tree"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='journal_id']" position="after">
            <field name="operating_unit_id"  groups="operating_unit.group_multi_operating_unit"/>
        </xpath>
      </field>
    </record>

    <record id="account_cash_statement_view_form" model="ir.ui.view">
      <field name="name">account.cash.statement.form.ou</field>
      <field name="model">account.bank.statement</field>
      <field name="inherit_id" ref="account.view_bank_statement_form2"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='company_id']" position="after">
            <field name="operating_unit_id"  groups="operating_unit.group_multi_operating_unit"/>
        </xpath>
        <xpath expr="//notebook//page/field[@name='line_ids']/tree/field[@name='amount']" position="after">
          <field name="operating_unit_id"
                 groups="operating_unit.group_multi_operating_unit"/>
        </xpath>
      </field>
    </record>
  </data>
</openerp>
