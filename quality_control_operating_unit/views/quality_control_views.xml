<openerp>
    <data>

        <record id="qc_inspection_view_search" model="ir.ui.view">
            <field name="name">qc.inspection.view.search</field>
            <field name="model">qc.inspection</field>
            <field name="inherit_id" ref="quality_control.qc_inspection_search_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='test']" position="after">
                    <field name="operating_unit_id" groups="operating_unit.group_multi_operating_unit"/>
                </xpath>
            </field>
        </record>

        <record id="qc_inspection_view_form" model="ir.ui.view">
            <field name="name">qc.inspection.view.form</field>
            <field name="model">qc.inspection</field>
            <field name="inherit_id" ref="quality_control.qc_inspection_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='test']" position="after">
                    <field name="operating_unit_id" groups="operating_unit.group_multi_operating_unit" options="{'no_create': True}"/>
                </xpath>
                <xpath expr="//field[@name='inspection_lines']/tree/field[@name='success']" position="after">
                    <field name="operating_unit_id" groups="operating_unit.group_multi_operating_unit" options="{'no_create': True}"/>
                </xpath>
            </field>
        </record>

        <record id="qc_inspection_view_tree" model="ir.ui.view">
            <field name="name">qc.inspection.view.tree</field>
            <field name="model">qc.inspection</field>
            <field name="inherit_id" ref="quality_control.qc_inspection_tree_view"/>
            <field name="arch" type="xml">
                <field name="success" position="after">
                    <field name="operating_unit_id" groups="operating_unit.group_multi_operating_unit"/>
                </field>
            </field>
        </record>

        <record id="qc_inspection_line_view_tree" model="ir.ui.view">
            <field name="name">qc.inspection.line.view.tree</field>
            <field name="model">qc.inspection.line</field>
            <field name="inherit_id" ref="quality_control.qc_inspection_line_tree_view"/>
            <field name="arch" type="xml">
                <field name="success" position="after">
                    <field name="operating_unit_id" groups="operating_unit.group_multi_operating_unit"/>
                </field>
            </field>
        </record>

        <record id="qc_inspection_line_view_search" model="ir.ui.view">
            <field name="name">qc.inspection.line.view.search</field>
            <field name="model">qc.inspection.line</field>
            <field name="inherit_id" ref="quality_control.qc_inspection_line_search_view"/>
            <field name="arch" type="xml">
                <field name="success" position="after">
                    <field name="operating_unit_id" groups="operating_unit.group_multi_operating_unit"/>
                </field>
            </field>
        </record>
    </data>
</openerp>
