<openerp>
<data noupdate="0">

    <record id="ir_rule_qc_inspection_allowed_operating_units"
            model="ir.rule">
        <field name="model_id" ref="quality_control.model_qc_inspection"/>
        <field name="domain_force">['|',('operating_unit_id','=',False),('operating_unit_id','in',[g.id for g in user.operating_unit_ids])]</field>
        <field name="name">QC Inspection from allowed operating units</field>
        <field name="global" eval="True"/>
        <field eval="0" name="perm_unlink"/>
        <field eval="0" name="perm_write"/>
        <field eval="1" name="perm_read"/>
        <field eval="0" name="perm_create"/>
    </record>

    <record id="ir_rule_qc_inspection_line_allowed_operating_units"
            model="ir.rule">
        <field name="model_id" ref="quality_control.model_qc_inspection_line"/>
        <field name="domain_force">['|',('operating_unit_id','=',False),('operating_unit_id','in',[g.id for g in user.operating_unit_ids])]</field>
        <field name="name">QC Inspection Line from allowed operating units</field>
        <field name="global" eval="True"/>
        <field eval="0" name="perm_unlink"/>
        <field eval="0" name="perm_write"/>
        <field eval="1" name="perm_read"/>
        <field eval="0" name="perm_create"/>
    </record>

</data>
</openerp>
