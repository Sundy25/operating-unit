<openerp>
<data noupdate="0">

    <record id="ir_rule_mrp_repair_allowed_operating_units"
            model="ir.rule">
        <field name="model_id" ref="mrp_repair.model_mrp_repair"/>
        <field name="domain_force">['|',('operating_unit_id','=',False),('operating_unit_id','in',[g.id for g in user.operating_unit_ids])]</field>
        <field name="name">MRP Repair from allowed operating units</field>
        <field name="global" eval="True"/>
        <field eval="0" name="perm_unlink"/>
        <field eval="0" name="perm_write"/>
        <field eval="1" name="perm_read"/>
        <field eval="0" name="perm_create"/>
    </record>
    
    <record id="ir_rule_mrp_repair_line_allowed_operating_units"
            model="ir.rule">
        <field name="model_id" ref="mrp_repair.model_mrp_repair_line"/>
        <field name="domain_force">['|',('location_id.operating_unit_id','=',False),('location_id.operating_unit_id','in',[g.id for g in user.operating_unit_ids]),
            '|',('location_dest_id.operating_unit_id','=',False),('location_dest_id.operating_unit_id','in',[g.id for g in user.operating_unit_ids])]</field>
        <field name="name">MRP Repair Line from allowed operating units</field>
        <field name="global" eval="True"/>
        <field eval="0" name="perm_unlink"/>
        <field eval="0" name="perm_write"/>
        <field eval="1" name="perm_read"/>
        <field eval="0" name="perm_create"/>
    </record>    
    
    <record id="ir_rule_mrp_repair_fee_allowed_operating_units"
            model="ir.rule">
        <field name="model_id" ref="mrp_repair.model_mrp_repair_fee"/>
        <field name="domain_force">['|',('operating_unit_id','=',False),('operating_unit_id','in',[g.id for g in user.operating_unit_ids])]</field>
        <field name="name">MRP Repair Fee from allowed operating units</field>
        <field name="global" eval="True"/>
        <field eval="0" name="perm_unlink"/>
        <field eval="0" name="perm_write"/>
        <field eval="1" name="perm_read"/>
        <field eval="0" name="perm_create"/>
    </record>    

</data>
</openerp>
