<openerp>
    <data>

        <record id="mrp_repair_view_search" model="ir.ui.view">
            <field name="name">mrp.repair.view.search</field>
            <field name="model">mrp.repair</field>
            <field name="inherit_id" ref="mrp_repair.view_repair_order_form_filter"/>
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <field name="operating_unit_id" groups="operating_unit.group_multi_operating_unit"/>
                </field>
            </field>
        </record>

        <record id="mrp_repair_view_form" model="ir.ui.view">
            <field name="name">mrp.repair.view.form</field>
            <field name="model">mrp.repair</field>
            <field name="inherit_id" ref="mrp_repair.view_repair_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="/form/sheet/group/group/field[@name='location_dest_id']" position="after">
                    <field name="operating_unit_id" groups="operating_unit.group_multi_operating_unit" options="{'no_create': True}"/>
                </xpath>
                <xpath expr="//field[@name='operations']/tree/field[@name='location_dest_id']" position="after">
                    <field name="operating_unit_id" groups="operating_unit.group_multi_operating_unit" options="{'no_create': True}"/>
                    <field name="operating_unit_dest_id" groups="operating_unit.group_multi_operating_unit" options="{'no_create': True}"/>
                </xpath>
                <xpath expr="//field[@name='fees_lines']/tree/field[@name='price_subtotal']" position="after">
                    <field name="operating_unit_id" groups="operating_unit.group_multi_operating_unit" options="{'no_create': True}"/>
                </xpath>
            </field>
        </record>

        <record id="mrp_repair_view_tree" model="ir.ui.view">
            <field name="name">mrp.repair.view.tree</field>
            <field name="model">mrp.repair</field>
            <field name="inherit_id" ref="mrp_repair.view_repair_order_tree"/>
            <field name="arch" type="xml">
                <field name="location_dest_id" position="after">
                    <field name="operating_unit_id" groups="operating_unit.group_multi_operating_unit"/>
                </field>
            </field>
        </record>

    </data>
</openerp>
