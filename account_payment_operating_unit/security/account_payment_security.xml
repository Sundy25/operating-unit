<openerp>
<data noupdate="0">

    <record id="ir_rule_payment_mode_allowed_operating_units"
            model="ir.rule">
        <field name="model_id" ref="account_payment.model_payment_mode"/>
        <field name="domain_force">['|',('journal_id.operating_unit_id','=',False),('journal_id.operating_unit_id','in',[g.id for g in user.operating_unit_ids])]</field>
        <field name="name">Payment Mode from allowed operating units</field>
        <field name="global" eval="True"/>
        <field eval="0" name="perm_unlink"/>
        <field eval="0" name="perm_write"/>
        <field eval="1" name="perm_read"/>
        <field eval="0" name="perm_create"/>
    </record>

    
    <record id="ir_rule_payment_order_allowed_operating_units"
            model="ir.rule">
