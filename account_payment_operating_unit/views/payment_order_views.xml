<openerp>
    <data>

        <record id="payment_order_view_search" model="ir.ui.view">
            <field name="name">payment.order.view.search</field>
            <field name="model">payment.order</field>
            <field name="inherit_id" ref="account_payment.view_payment_order_search"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='state']" position="after">
                    <field name="operating_unit_id" groups="operating_unit.group_multi_operating_unit"/>
                </xpath>
            </field>
        </record>

        <record id="payment_order_view_form" model="ir.ui.view">
            <field name="name">payment.order.view.form</field>
            <field name="model">payment.order</field>
            <field name="inherit_id" ref="account_payment.view_payment_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="/form/sheet/group/group/field[@name='company_id']" position="after">
                    <field name="operating_unit_id" groups="operating_unit.group_multi_operating_unit" options="{'no_create': True}"/>
                </xpath>
                <xpath expr="//field[@name='line_ids']/tree/field[@name='amount']" position="after">
                    <field name="operating_unit_id" groups="operating_unit.group_multi_operating_unit"/>
                </xpath>
                <xpath expr="//field[@name='line_ids']/form//field[@name='company_id']" position="after">
                    <field name="operating_unit_id" groups="operating_unit.group_multi_operating_unit"/>
                </xpath>
            </field>
        </record>

        <record id="payment_order_view_tree" model="ir.ui.view">
            <field name="name">payment.order.view.tree</field>
            <field name="model">payment.order</field>
            <field name="inherit_id" ref="account_payment.view_payment_order_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='company_id']" position="after">
                    <field name="operating_unit_id" groups="operating_unit.group_multi_operating_unit"/>
                </xpath>
            </field>
        </record>

    </data>
</openerp>
