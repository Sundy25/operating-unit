<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
    <record id="stock_inventory_view_form" model="ir.ui.view">
      <field name="name">stock.inventory.form.ou</field>
      <field name="model">stock.inventory</field>
      <field name="inherit_id" ref="stock.view_inventory_form"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='company_id']" position="after">
          <field name="operating_unit_id"  groups="operating_unit.group_multi_operating_unit"/>
        </xpath>
        <xpath expr="//field[@name='line_ids']/tree/field[@name='location_id']" position="after">
          <field name="operating_unit_id"
                 groups="operating_unit.group_multi_operating_unit"/>
        </xpath>
      </field>
    </record>

    <record id="stock_inventory_view_tree" model="ir.ui.view">
      <field name="name">stock.inventory.tree.ou</field>
      <field name="model">stock.inventory</field>
      <field name="inherit_id" ref="stock.view_inventory_tree"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='state']" position="before">
            <field name="operating_unit_id"  groups="operating_unit.group_multi_operating_unit"/>
        </xpath>
      </field>
    </record>
  </data>
</openerp>
